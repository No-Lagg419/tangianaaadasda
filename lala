--// CONFIG
local petName = "Inverted Dragonfly" -- pangalan ng equipped pet mo

--// GUI Creation
local ScreenGui = Instance.new("ScreenGui")
local Frame = Instance.new("Frame")
local TextBox = Instance.new("TextBox")
local ApplyBtn = Instance.new("TextButton")
local ResetBtn = Instance.new("TextButton")

ScreenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

Frame.Size = UDim2.new(0, 200, 0, 150)
Frame.Position = UDim2.new(1, -210, 0.3, 0)
Frame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
Frame.Parent = ScreenGui

TextBox.Size = UDim2.new(0, 180, 0, 30)
TextBox.Position = UDim2.new(0, 10, 0, 10)
TextBox.PlaceholderText = "Multiplier (e.g. 2)"
TextBox.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
TextBox.Text = ""
TextBox.Parent = Frame

ApplyBtn.Size = UDim2.new(0, 180, 0, 30)
ApplyBtn.Position = UDim2.new(0, 10, 0, 50)
ApplyBtn.Text = "Apply Pet Height"
ApplyBtn.BackgroundColor3 = Color3.fromRGB(0, 170, 0)
ApplyBtn.Parent = Frame

ResetBtn.Size = UDim2.new(0, 180, 0, 30)
ResetBtn.Position = UDim2.new(0, 10, 0, 90)
ResetBtn.Text = "Reset to Normal"
ResetBtn.BackgroundColor3 = Color3.fromRGB(170, 0, 0)
ResetBtn.Parent = Frame

--// Function to get pet
local function getPet()
    return workspace:WaitForChild("PetsPhysical"):FindFirstChild(petName)
end

--// Store original sizes
local originalSizes = {}
local function saveOriginalSizes(pet)
    for _, part in ipairs(pet:GetDescendants()) do
        if part:IsA("BasePart") then
            originalSizes[part] = part.Size
        end
    end
end

--// Smooth scale function
local function smoothScale(pet, multiplier)
    for _, part in ipairs(pet:GetDescendants()) do
        if part:IsA("BasePart") and originalSizes[part] then
            local startSize = part.Size
            local targetSize = Vector3.new(
                originalSizes[part].X,
                originalSizes[part].Y * multiplier,
                originalSizes[part].Z
            )
            for i = 0, 1, 0.1 do
                part.Size = startSize:Lerp(targetSize, i)
                task.wait(0.02)
            end
        end
    end
end

--// Apply button event
ApplyBtn.MouseButton1Click:Connect(function()
    local pet = getPet()
    if pet and TextBox.Text ~= "" then
        local mult = tonumber(TextBox.Text)
        if mult then
            smoothScale(pet, mult)
        end
    end
end)

--// Reset button event
ResetBtn.MouseButton1Click:Connect(function()
    local pet = getPet()
    if pet then
        for _, part in ipairs(pet:GetDescendants()) do
            if part:IsA("BasePart") and originalSizes[part] then
                part.Size = originalSizes[part]
            end
        end
    end
end)

--// Initial save
local pet = getPet()
if pet then
    saveOriginalSizes(pet)
else
    warn("Pet not found at start:", petName)
end
